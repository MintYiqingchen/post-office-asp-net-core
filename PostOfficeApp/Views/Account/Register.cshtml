@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div id="backtag">
    返回
</div>
<h4>REGISTER</h4>

<div class="ui grid">
    <div class="centered twelve wide column" id="loginform">
        <form class="ui form" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>新用户注册</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group field">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group field">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="ui primary button">注册</button>
        </form>
    </div>
</div>
<link rel="stylesheet" href="~/css/login.css" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/semantic.min.js"></script>
<script src="~/lib/angular.js"></script>
<script>
    $('#backtag').hover(function () {
        $(this).css('background-color', '#888888');
    }, function () {
        $(this).css('background-color', '#FFF');
    });
    $('#backtag').click(function () { history.back(); });
</script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
