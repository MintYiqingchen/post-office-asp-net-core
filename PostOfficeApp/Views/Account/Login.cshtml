@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "登录";
}
<div class="ui clearning segment">
    <div id="backtag">
        <a><i class="ui arrow left icon"></i></a>
        <span class="ui left header">返回</span>
    </div>
</div>
<h2>@ViewData["Title"]</h2>
<div class="ui grid">
    <div class="centered twelve wide column" id="loginform">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="ui form">
                <h4>用户登录</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group field">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group field">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="ui primary button">登录</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">忘记密码？</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">创建新账号</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>
<link rel="stylesheet" href="~/css/login.css" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/semantic.min.js"></script>
<script src="~/lib/angular.js"></script>
<script>
    $('#backtag').click(function () { history.back(); });
</script>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/semantic.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
